{
  "manifest_version": 2,
  "name": "Leads Tracker",
  "version": "1.0",
  "description": "A Chrome extension for tracking leads",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"]
}